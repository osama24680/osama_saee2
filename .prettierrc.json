{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleAttributePerLine": true,
  "printWidth": 80,
  "jsxSingleQuote": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.html", "*.css", "*.scss"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
